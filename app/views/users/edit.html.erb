<h1>Edit a existing User </h1>



<%= form_with(model: @user, local: true, data: { turbo: false } ) do |f| %>
        
    <p>
        <%= f.label :name %><br/>
        <%= f.text_field  :name %>
    </p>
    <p>
    <%= f.label :description %><br/>
    <%= f.text_area  :description %>
    </p>
    
    <%= f.submit %>
<% end %>