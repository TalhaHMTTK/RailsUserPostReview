<h1>Create a New User </h1>


<%= form_with scope: :user, url: users_path, local: true, data: { turbo: false } do |f| %>
    <% if @user.errors.any? %>

    <ul>
        <%= @user.errors.full_messages.each do |msg| %>
            <li><%= msg %> </li>
    <% end %>
    </ul>

<% end %>
<p>
<%= f.label :name %><br/>
<%= f.text_field :name %>
</p>
<p>
<%= f.label :description %><br/>
<%= f.text_area :description %>
</p>
<%= f.submit %>
<% end %>
